    "test:integration": "yarn lerna run test:integration --stream",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run"
  },
  "dependencies": {
    "lerna": "^4.0.0"
  },
  "devDependencies": {
    "cypress": "^8.3.0"
