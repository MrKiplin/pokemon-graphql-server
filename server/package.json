{
  "name": "server",
  "description": "Backend GraphQL server",
  "version": "1.1.0",
  "main": "index.ts",
  "license": "MIT",
  "author": "MrKiplin <https://github.com/MrKiplin>",
  "private": true,
  "scripts": {
    "test": "TZ=UTC jest src --runInBand src/",
    "test:integration": "TZ=UTC jest --runInBand test-integration/",
    "lint": "eslint -c .eslintrc.js --ext .ts '{src,test}/**/*.ts'",
    "start": "ts-node-dev src/index.ts",
    "build": "tsc -p ./tsconfig.build.json"
  },
  "dependencies": {
    "@ovotech/typesafe-get": "^2.0.1",
    "apollo-server-express": "^3.1.2",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.14",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/eslint-plugin-tslint": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.5.3",
    "nock": "^13.1.1",
    "prettier": "^2.3.2",
    "ts-jest": "^26.4.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost"
  }
}
